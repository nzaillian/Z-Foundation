@import 'common/common'

html
  margin: 0px 0px 0px 0px
  min-height: 100%
  height: 100%
  min-width: 1120px
  min-height: 100%

body 
  margin: 0px 0px 0px 0px
  text-align:center
  background-color: #F7F7F7 //#FDFBF1
  background: url(<%= asset_path 'common/bg_tan.png' %>)
  font-family: 'Museo Slab'
  color: #574742
  // text-shadow: white 1px 1px 0
  line-height: 100%
  height: 100%
  min-height: 100%


html, body
  width: 100%
  margin: 0px 0px 0px 0px

* 
  box-sizing: border-box
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box

div
  line-height: 144%

ul
  list-style-type: none
  text-align: left

  li, li a
    text-align: left        

#wrapper 
  width: 100%
  height: auto
  min-height: 100%
  text-align: center
  margin: 0px 0px 90px 0px
  padding: 0px 0px 0px 0px

#content
  width: 960px
  padding: 40px 0px 0px 0px
  @include centered
  min-height: 200px
  margin-top: 0px
  margin-bottom: 20px
  @include rounded_corners(3px)        

#header
  $h_grad_min: #475255
  $h_grad_max: #59686c
  width: 100%
  height: 53px
  position: relative
  z-index: 5
  //@include gradient2($h_grad_min, $h_grad_max)
  background: linear-gradient(#FAFAFA, #EAEAEA)
  background: -moz-linear-gradient(#FAFAFA, #EAEAEA)
  background: -ms-linear-gradient(#FAFAFA, #EAEAEA)
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #FAFAFA), color-stop(100%, #EAEAEA))
  background: -webkit-linear-gradient(#FAFAFA, #EAEAEA)
  background: -o-linear-gradient(#FAFAFA, #EAEAEA)
  -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr='#fafafa',endColorstr='#eaeaea')"
  background: linear-gradient(#FAFAFA, #EAEAEA)
  border-bottom: 1px solid #CACACA

  .inner, .header-inner
    width: 960px
    text-align: left
    @include centered

    #logo, #logo:hover
      position: absolute
      display: block
      margin-top: 0px
      height: 51px
      width: 256px
      font-size: 31px
      color: #333
      text-decoration: none
      font-weight: bold

      img
        height: 51px
        margin: 0px

    #logo.light
      margin-top: 3px
      margin-left: 0px
      height: 43px  

.auth-button, .refined-button
  position: relative
  float: right
  z-index: 9999
  font-size: 16px
  margin-top: 7px
  margin-right: 1px
  margin-left: 10px

#footer
  clear: both
  width: 100%
  height: 40px
  font-size: 15px
  padding-right: 20px
  padding-left: 20px
  position: relative
  width: 100%
  text-align: left
  margin-top: -40px

  a, a:hover
    color: #EB5F3A
    text-decoration: none
    font-weight: bold

  ul
    margin-top: 7px
    clear: both
    float: right

  ul, li
    display: inline-block

  li
    margin-right: 20px

  ul li a
    color: #666

form
  margin-bottom: 0px

input[type='text'], input[type='password']
  height: 26px
  padding: 3px 4px
  vertical-align: middle

.input-label, .or-wrap
  text-align: right
  font-size: 14px
  padding-top: 5px 

.alert
  margin-bottom: 32px
  margin-top: -11px

.alert.alert-error.validation-errors
  text-align: left
  ul
    margin-top: 5px
    list-style-type: disc

.left-align 
  text-align: left

.instructions
  font-size: 14px
  text-align: left


ul.err-list
  margin: 10px auto 0px auto
  list-style-type: disc
  font-style: italic
  padding-left: 42px

[class^="icon-"],
[class*=" icon-"]
  margin-top: 1px


.header
  font-size: 22px

.breaker
  clear: both

.clear
  clear: both    