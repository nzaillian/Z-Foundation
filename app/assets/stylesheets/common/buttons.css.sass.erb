.btn.action.edit, .btn.action.edit:active, .btn.action.edit:hover
  color: #f7f7f7
  @include gradient_ext(#67554f, #67554f)

.btn.action.delete, .btn.action.delete:active
  color: #f7f7f7
  @include gradient_ext(#c33814, #ae3212)  

.btn.action.go, .btn.action.go:active, .btn.action.go:hover
